{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
	"WORKSPACE":"{{env `WORKSPACE`}}"

    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "ap-southeast-1",
            "source_ami": "ami-12356d40",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "Tapirus-Image {{timestamp}}",
            "iam_instance_profile": "ec2-s3"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "create_folder.sh"
        },
        {
            "type": "file",
            "source": "{{user `WORKSPACE`}}/",
            "destination": "/apps/tapirus/app"
        },
        {
            "type": "shell",
	    "remote_path":"/apps/tapirus/app",
            "script": "run.sh"
        }
    ]
}
